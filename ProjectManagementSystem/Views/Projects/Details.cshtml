@model ProjectDetailsViewModel

<h2>Project: @Model.Project.Name</h2>

<p>Status: @Model.Project.StatusName</p>
<p>Start: @Model.Project.StartDate</p>
<p>Planned end: @Model.Project.EndDatePlanned</p>

<h3>Tasks</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Priority</th>
            <th></th> @* колонка під кнопку Details *@
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.StatusName</td>
                <td>@task.PriorityName</td>
                <td>
                    <a asp-controller="Tasks"
                       asp-action="Details"
                       asp-route-id="@task.Id"
                       class="btn btn-sm btn-primary">
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
