@model ProjectDetailsViewModel

<h2>Project: @Model.Project.Name</h2>

<p>Status: @Model.Project.StatusName</p>
<p>Start: @Model.Project.StartDate</p>
<p>Planned end: @Model.Project.EndDatePlanned</p>

<h3>Tasks</h3>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Due date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.StatusName</td>
                <td>@task.PriorityName</td>
            </tr>
        }
    </tbody>
</table>
